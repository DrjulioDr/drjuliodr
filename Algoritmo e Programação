#include <stdio.h>
#include <stdlib.h>
#include <ctype.h> // Precisarei dessa lib para transformar o Sexo em "F" == "f", para não ocorrer erros ao digitar com capslock
#include <string.h>
// GCC Versão 8.3.0-6

int main()
{
    char name[30], genero, jovem_nome[20];
    int idade, total, mais_jovem, maior_m, maior_f;
    total = 0;
    maior_f = 0;
    maior_m = 0;
    /*
    Comecei o programa criando as variáveis que serão usadas neste programa
    que deve coletar 1000 dados
    
    As variáveis maior_f serão usadas para contar a quantidade de mulheres
    menores de 16, assim como maior_m para os homens.
    
    A variável mais_jovem armazenará o que começou mais cedo.
    
    */
    
    while (1)
    {
        printf("\nQual seu nome? ");
        scanf("%s",name);
        printf("Informe seu Sexo. [Apenas M ou F]: ");
        scanf(" %c",&genero);
        printf("Com quantos começou a trabalhar? ");
        scanf(" %d",&idade);
		genero = tolower(genero);
        if (genero == 'f'){  // Irá ver se o sexo é feminino, caso seja ele irá verificar se é menor que 16.
            if (idade < 16){
                maior_f += 1;
            }
        }
        else{
            if (idade < 16){
                maior_m += 1; // Caso o If para o sexo Feminino seja falso ele iria verificar se a idade é menor que 16 e irá adicionar aos homens
            }
        }
        if (total == 0){
            mais_jovem = idade;
            strcpy(jovem_nome, name); // O contador irá se iniciar em 0, logo eu pego o primeiro valor a ser dicionado, que será o menor.
        }
        else{
            if (idade < mais_jovem){
                mais_jovem = idade;
                strcpy(jovem_nome, name); // Quando o contador for maior que 0 ele irá verificar se a idade digitada é a menor
            }
        }
        total += 1; // Aqui adicionamos +1 participante ao total
        if (total == 3){ // Caso o total seja mil o laço irá ser quebrado e mostraremos o resultado.
            break;
        }
    }
    printf("\O funcionário que começou a trabalhar mais jovem foi o %s, com %d anos", jovem_nome, mais_jovem);
    
    if (maior_m > maior_f){
        printf("\nA maior parte dos que começam a trabalhar antes dos 16 são Homens.");
    }
    if (maior_f > maior_m){
        printf("\nA maior parte dos que começam a trabalhar antes dos 16 são Mulheres.\n");
    }
	printf("\nHomens: %d\nMulheres: %d",maior_m, maior_f);
    return 0;
}
